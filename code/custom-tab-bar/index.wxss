.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 105rpx;
  background: #F4F4F4;
  display: flex;
}
.tab-bar-border {
  background-color: rgba(0, 0, 0,0.33);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.tab-bar-two{
  margin-right: 70rpx;
}
.tab-bar-three{
  margin-left: 70rpx;
}
.tab-bar-item image {
  width: 50rpx;
  height: 50rpx;
}
.tab-bar-item view {
  font-size: 20rpx;
}
.tab_plus{
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  bottom: 20rpx;
  left: 44%;
}
.nav_plus{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 100rpx;
  color: #F4F4F4;
  background-color:#46A86B;
  width: 90rpx;
  height: 90rpx;
  border: #F4F4F4 solid 8rpx;
  box-shadow: 0 -3rpx 9rpx 1rpx gainsboro;
  border-radius: 50%;
  font-weight: bold;
}
.nav_plus p{
  position: relative;
  right: 2rpx;
  bottom: 3rpx;
}